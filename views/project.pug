extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= project_name

        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        
        //- Loop through to dynamically add technogolies 
        ul
          each technology in technologies
            li= technology

        a.button.expanded(href=`${live_link}` target='_blank') Live Demo
        a.button.expanded(href=`${github_link}` target='_blank') GitHub Repo
    
    //- Dynamically add image url for project that was clicked 
    img.image(data-aos='fade-up' src=`${image_urls[1]}`)
    img.image(data-aos='fade-up' src=`${image_urls[2]}`)
    img.image(data-aos='fade-up' src=`${image_urls[3]}`)